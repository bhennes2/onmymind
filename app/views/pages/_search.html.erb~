<% @thoughts = Thought.search(params[:search],params[:type]) %>
Displaying <strong><%= pluralize(@thoughts.count, 'result') %></strong> for a <strong><%= params[:type] %></strong> search on <strong><%= params[:search] %></strong><br />
<% @thoughts.each do |thought| %>
	<% if params[:search] = "Idea" %>
		<%= thought.id %> | <%= thought.idea %> | for tag: <%= thought.tag %> | <%= link_to 'Show', thought %><br />
	<% else %>
		<%= thought.id %> | <%= thought.idea %> | <%= link_to 'Show', thought %><br />
	<% end %>
<% end %>
