<p>Viewing <%= pluralize(@thoughts.count, 'idea') %> for date: <%= params[:date].to_date.strftime("%B %-d, %Y") %></p>
<table>
	<tr>
		<th>ID</th>
		<th>Idea</th>
		<th>Timeframe</th>
		<th>Timeframe Date</th>
		<th>User ID</th>
		<th>Tag</th>
	</tr>

<% @thoughts.each do |thought| %>
	<tr>
		<td><%= thought.id %></td>
		<td><%= thought.idea %></td>
		<td><%= thought.timeframe %></td>
		<td><%= thought.timeframe_date %></td>
		<td><%= thought.user_id %></td>
		<td><%= thought.tag %></td>
		<td><%= link_to 'Show', thought %></td>
		<td><%= link_to 'Edit', edit_thought_path(thought) %></td>
		<td><%= link_to 'Destroy', thought, :confirm => 'Are you sure?', :method => :delete %></td>
		<td><%= form_for(thought) do |f| %>
			<div class="field">
				<%= f.check_box :complete, :id => thought.id, :class => "checkbox" %><label>Completed</label>
			</div>
		    <% end %>
		</td>
	</tr>
<% end %>
</table>
<br />

<%= link_to 'New Thought', new_thought_path %><br />
<%= link_to 'Back', thoughts_path %>
