<script>
	$('a.view').click(function(){
		$.get("/filter", { type: $(this).attr('id') }, null, 'script');
		return false;
	});
	$('.checkbox').change(function(){
		alert("Mark this complete?");
		$.post("/completed", { id: $(this).attr('id'), value: true }, alert("Completed!"), 'script');
		return false;
	});
</script>
