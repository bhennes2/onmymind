<p><strong>Username: </strong><%= @user.username %></p>
<p><strong>Email: </strong><%= @user.email %></p>
<a id="display_users" onclick="toggle_users()">...Show more users...</a>

<% if current_user.admin? %>
	<table id="users" style="display: none;">
		<tr>
			<th>ID</th>
			<th>Username</th>
			<th>Email</th>
			<th>Admin?</th>
		</tr>
	<% @users.each do |user| %>
		<tr>
			<td><%= user.id %></td>
			<td><%= user.username %></td>
			<td><%= user.email %></td>
			<td><%= user.admin %></td>
		</tr>
	<% end %>
	</table>
<% end %>

<script>
	function toggle_users(){
		$('#users').toggle();
		$('#display_users').html('...Hide other users...');
	};

</script>
